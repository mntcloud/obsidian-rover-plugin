{
  "compilerOptions": {
    "baseUrl": "src",
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react",
    "jsxFactory": "m",
    "jsxFragmentFactory": "m.Fragment",
    "inlineSourceMap": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ]
  },
  "include": [
    "**/*.ts"
  ]
}
